<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/layout_reviews"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
    android:id="@+id/iv_detail_divider2"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:srcCompat="@android:color/black"/>

  <TextView
    android:id="@+id/tv_detail_reviews_label"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:text="@string/detail_reviews_label_empty"
    android:visibility="gone"
    android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

  <android.support.v7.widget.RecyclerView
    android:id="@+id/rv_detail_reviews"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp"
    android:visibility="gone"
    tools:listitem="@layout/review_item"/>

  <ProgressBar
    android:id="@+id/pb_detail_loading_reviews"
    android:layout_width="44dp"
    android:layout_height="44dp"
    android:layout_marginTop="16dp"
    android:layout_gravity="center"/>
</LinearLayout>